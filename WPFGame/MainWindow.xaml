<Window x:Class="WPFGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" MinHeight="400" MinWidth="400">
    <Grid x:Name="gMain">
        <Label x:Name="label" Content="Timer" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" />
        <CheckBox x:Name="stopBox" Content="Hided" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button x:Name="mButton" Content="Catch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="55" Height="55" MouseDoubleClick="MButton_MouseDoubleClick"/>
        <Button x:Name="TopRightButton" Content="Push" HorizontalAlignment="Right" VerticalAlignment="Top" Width="55" Height="55"/>
        <Button x:Name="BotRightButton" Content="Scroll me" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="55" Height="55" MouseWheel="BotRightButton_MouseWheel"/>
        <Button x:Name="BotLeftButton" Content="Push" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="55" Height="55" Click="BotLeftButton_Click"/>
        

    </Grid>
</Window>
